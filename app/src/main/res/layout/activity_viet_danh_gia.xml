<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".view.vietdanhgia.VietDanhGia">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhận xét về sách"
            android:textSize="18sp" />

        <RatingBar
            android:id="@+id/rbVietDanhGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_edTieuDeVietDanhGia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edTieuDeVietDanhGia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tiêu đề nhận xét"
                android:lines="1"
                android:maxLength="50" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_edNoiDungVietDanhGia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/edNoiDungVietDanhGia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nội dung nhận xét"
                android:maxLines="3"
                android:scrollbars="vertical" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnDongYVietDanhGia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/green"
            android:text="Đồng ý" />


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
