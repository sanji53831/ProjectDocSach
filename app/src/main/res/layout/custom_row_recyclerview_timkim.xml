<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cartViewItem"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="@color/whitemo">

        <ImageView
            android:id="@+id/imgSachMain"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/bietnguoidungnguoivaquannguoi" />

        <TextView
            android:id="@+id/tvTenSachMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:width="100dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Mười Lời Khuyên hay"
            android:textAlignment="center"
            android:textColor="@color/blackdam" />

    </android.support.v7.widget.CardView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:visibility="visible" />


</FrameLayout>